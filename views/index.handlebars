

<div class="jumbotron text-center">
    <div class= "container"> 
       
        <img src="/assets/images/burger.jpg" style="width:164px;height:127px;">  
         <h1 class= "text-center text-white">Welcome to WcDonalds!</h1 >
        <p class= "text-center text-white"> Home of the succulent burgers!</p>
    </div>
</div>


<div class="container text-center">
    <h2 class= "text-white"> Succulent! It'll be succulent! </h2>
</div>
<hr>

<div class="container bg-white" style="padding:50px">
    <div class="row">
        <div class="col s12 m6">
            <h3>Burger List:</h3>
        </div>
        <div class="col s12 m6">
            <ul>
                    {{#each burger}}
                    {{> burger/burger-block }}
                    {{/each}}
            </ul>
        </div>
    </div>
</div>

<br>
<div class="container bg-white" style="padding:50px">
    <h2>Make a Burger</h2>
    <form class="create-form">

        <div class="form-group">
            <label for="burger">Burger:</label>
            <input type="text" id="brgr" name="name">
        </div>


        <button class="btn-primary" type="submit">Cook the Burger</button>
    </form>
</div>
</div>